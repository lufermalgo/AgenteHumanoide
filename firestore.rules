rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para sesiones de assessment
    match /assessment_sessions/{sessionId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas para respuestas de usuarios
    match /user_responses/{responseId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas para configuraci√≥n de preguntas (solo lectura para usuarios autenticados)
    match /questions/{questionId} {
      allow read: if request.auth != null;
    }
    
    // Reglas para metadatos de usuarios
    match /user_metadata/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
  }
}