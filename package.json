{
  "name": "agente-humanoide",
  "version": "1.0.0",
  "description": "Agente Humanoide de Encuesta por Voz para Summan SAS",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run serve",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf frontend/node_modules backend/node_modules frontend/dist backend/lib",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "deploy": "npm run build && firebase deploy",
    "deploy:frontend": "npm run build:frontend && firebase deploy --only hosting",
    "deploy:backend": "npm run build:backend && firebase deploy --only functions",
    "emulators": "firebase emulators:start --project demo-assessmentia",
    "emulators:all": "firebase emulators:start --only functions,firestore,auth,hosting --project demo-assessmentia"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lufermalgo/AgenteHumanoide.git"
  },
  "keywords": [
    "ai",
    "voice",
    "assessment",
    "firebase",
    "react",
    "typescript"
  ],
  "author": "Summan SAS",
  "license": "MIT"
} 